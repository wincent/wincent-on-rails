.post
  %h1=h @post.title
  .when=timeinfo @post
  .excerpt=excerpt_html
  .body=body_html
.cloud
  %h1 Tags
  -# consider moving this into a partial
  -for tag in @post.tags
    =scaled_tag tag
%p.links
  -if admin?
    =link_to 'edit', edit_blog_path(@post), :class => 'edit_link'
  =link_to 'back', blog_index_path, :class => 'back_link'
