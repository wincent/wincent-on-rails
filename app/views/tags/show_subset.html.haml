%h1==Tag: #{h @tag.name}
%h2
  =pluralizing_count @taggables.length, params[:type].downcase
  tagged with
  =h params[:id]
%table
  %tr
    %th Item
    %th When
  -@taggables.each do |taggable|
    %tr
      %td=taggable_link taggable
      %td=timeinfo taggable
.links
  =link_to "all items tagged with #{h @tag.name}", tag_path(@tag)
  =link_to 'all tags', tags_path
