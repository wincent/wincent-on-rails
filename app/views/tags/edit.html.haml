-@page_title = 'Edit tag'
=breadcrumbs link_to('Tags', tags_path), link_to(@tag.name, @tag), @page_title
%h1.major=@page_title
=render 'shared/error_messages', :model => @tag
=form_for @tag do |f|
  %ul
    %li
      =f.label :name
      =f.text_field :name
    %li=f.submit
.links
  =link_to 'show', @tag
  =button_to 'destroy', @tag, :confirm => 'Are you sure?',
    :method => :delete, :class => 'destructive'
  =link_to 'all tags', tags_path
