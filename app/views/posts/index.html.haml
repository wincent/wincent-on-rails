-content_for :css do
  =stylesheet_link_tag 'posts'
-@page_title = 'blog index'
-atom_link
#posts
  %h1
    Blog posts
    =feed_icon posts_url(:format => :atom)
  -if @paginator
    .pagination=@paginator.pagination_links
  -for @post in @posts
    .post
      %h2.major=link_to h(@post.title), post_url(@post)
      .when=timeinfo @post
      =excerpt_html :base_heading_level => 2
      -unless @post.body.blank?
        =link_to 'more...', post_url(@post)
      .info
        =comments_link(@post)
        =link_to 'Tags', tags_url
        \:
        =tag_links(@post)
  -# TODO: add search box here
  -if @paginator
    .pagination=@paginator.pagination_links
#sidebar
  -cache :tweets_sidebar do
    %h1
      Tweets
      =feed_icon tweets_url(:format => :atom)
    =render 'tweets/tweets.html.haml'
    %hr
    %p=link_to 'more tweets', tweets_url
.clearboth
