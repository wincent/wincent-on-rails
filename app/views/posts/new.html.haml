- @page_title = 'New post'
= breadcrumbs link_to('Blog', posts_path), @page_title
%h1.major= @page_title
= render 'shared/error_messages', model: @post
= render 'form', post: @post

%h2#preview_link.major Preview
-# TODO: graceful non-JS fallback
#ajax-flash
#preview= render 'preview'
.links= link_to 'all posts', posts_path
- content_for :javascript do
  :javascript
    observeField({ 'kind': 'post', 'fieldName': 'title', 'include': ['excerpt', 'body'], 'url': '#{posts_path}' });
    observeField({ 'kind': 'post', 'fieldName': 'excerpt', 'include': ['title', 'body'], 'url': '#{posts_path}' });
    observeField({ 'kind': 'post', 'fieldName': 'body', 'include': ['title', 'excerpt'], 'url': '#{posts_path}' });
    setupPreviewLink({ 'kind': 'post', 'include': ['body', 'title', 'excerpt'], 'url': '#{posts_path}' });
