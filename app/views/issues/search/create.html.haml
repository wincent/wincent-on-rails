- @page_title = 'Issue search'
= breadcrumbs link_to('Issues', issues_path), 'Search'
%h1.major= @page_title
.links
  = link_to 'show all issues', issues_path
  = link_to 'search again', search_issues_path
#issue_search(style='display:none;')
  = render 'issues/search/form'
%h2.major Results
.annotation= search_info
= render 'issues/issues'
- content_for :javascript do
  :javascript
    $('a[href="#{search_issues_path}"]').on('click', function(event) {
      event.preventDefault();
      $('#issue_search').toggle();
      $('#issue_summary').focus();
    });
