%h1 Support
=link_to 'forums', forums_path
-# mailing lists etc
%h2 Issues
%h3 Recently modified
.pagination=@paginator.pagination_links if @paginator
%table.main
  %tr
    -sortable_header_cell :kind, 'Kind'
    -sortable_header_cell :id, '#'
    -sortable_header_cell :product, 'Product'
    -sortable_header_cell :summary, 'Summary'
    -sortable_header_cell :updated_at, 'When'
  -for issue in @issues
    %tr{ :class => cycle('odd', 'even') }
      %td{:class => issue.kind_string.tableize}=issue.kind_string.capitalize
      %td=issue.id
      %td=issue.product.name if issue.product
      %td{:title => h(issue.summary)}=h(truncate(issue.summary, 60))
      %td=timeinfo issue
.pagination=@paginator.pagination_links if @paginator
