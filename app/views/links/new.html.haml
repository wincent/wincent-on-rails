- @page_title = 'New link'
= breadcrumbs link_to('Links', links_path), @page_title
%h1.major= @page_title
= render 'shared/error_messages', model: @link
= form_for @link do |f|
  = f.text_field :uri, label: 'URI'
  = f.text_field :permalink, annotation: 'optional'
  = f.submit
.links= link_to 'links index', links_path
