%h1 Create new link
=render 'shared/error_messages', :model => @link
=form_for @link, :builder => ValidatingFormBuilder do |f|
  %ul
    %li
      =f.label :uri, 'URI'
      =f.text_field :uri
    %li
      =f.label :permalink, annotation('Permalink', 'optional')
      =f.text_field :permalink
  =f.submit 'Create'
%p=link_to 'back', links_path
