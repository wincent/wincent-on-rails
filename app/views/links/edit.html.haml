-@page_title = 'Edit link'
=breadcrumbs link_to('Links', links_path), @page_title
%h1.major=@page_title
=render 'shared/error_messages', model: @link
=form_for @link do |f|
  %ul
    %li
      =f.label :uri
      =f.text_field :uri
    %li
      =f.label :permalink
      =f.text_field :permalink
    %li=f.submit
.links
  =link_to 'all links', links_path
  =button_to_destroy_model @link
