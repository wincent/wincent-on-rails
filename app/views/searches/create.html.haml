-content_for :css do
  =stylesheet_link_tag 'search'
-@page_title = 'Search results'
=breadcrumbs 'Search'
%h1.major Search results
-form_tag searches_path, :method => :post do
  =text_field_tag :query, @query, :size => 75
  =submit_tag 'Search'
-if @models.length == 0
  %p No results.
-else
  -@models[0..19].each_with_index do |model, i|
    -next if model.nil?
    %div(class="result #{cycle('odd', 'even')}")
      =render "searches/#{model.class.to_s.downcase}", :model => model, :result_number => @offset + i + 1
-if @models.length >= 20
  -form_tag searches_path, :method => :post do
    =hidden_field_tag :query, @query
    =hidden_field_tag :offset, @offset + 20
    =submit_tag 'more results...'
.links
  =link_to 'new search', new_search_path
