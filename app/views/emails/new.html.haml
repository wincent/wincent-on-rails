-@page_title = 'New email'
=breadcrumbs link_to(@user.display_name, @user), @page_title
%h1.major=@page_title
=render 'shared/error_messages', :model => @email
=form_for [@user, @email] do |f|
  %ul
    %li
      =f.label :address,
        annotation('Address', 'a confirmation email will be sent to this address')
      =f.text_field :address
    %li=f.submit
