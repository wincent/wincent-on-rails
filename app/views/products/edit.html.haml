-@page_title = @product.name
=breadcrumbs link_to('Products', products_path), @page_title
%h1.major Edit product [#{link_to 'edit pages', '#pages'}]
=render 'form'
%h2#pages.major Pages
-unless @product.pages.empty?
  %table
    %thead
      %tr
        %th Title
        %th Permalink
        %th Front
        %th Actions
    -unless @product.pages.empty?
      %tbody
        -for page in @product.pages
          -# TODO: make all these in-place AJAX editors
          %tr
            %td=page.title
            %td=page.permalink
            %td=page.front? ? image_tag('tick.png') : raw('&nbsp;')
            %td.links=link_to 'edit', edit_product_page_path(@product, page)
.links
  =link_to 'create a new page', new_product_page_path(@product)
.links
  =link_to 'show product', product_path(@product)
  =link_to 'all products', products_path
