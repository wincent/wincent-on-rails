-page_title 'Administrator dashboard'
%table
  %tr
    %th Resource
    %th Awaiting moderation
    %th Actions
  %tr
    %td Comments
    %td=@comment_count.to_i
    %td=link_to 'moderate', comments_path
  %tr
    %td Issues
    %td=@issue_count.to_i
    %td=link_to 'moderate', admin_issues_path
  %tr
    %td Topics
    %td=@topic_count.to_i
    %td=link_to 'moderate', '/topics/' # can't use url_for here (it would be scoped to admin namespace)
