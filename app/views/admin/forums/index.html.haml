#ajax-flash
-page_title 'Forums administration'
%table
  %thead
    %tr
      %th Position
      %th Name
      %th Description
      %th Actions
  -unless @forums.empty?
    %tbody
      - @forums.each do |forum|
        %tr.forum(id="forum_#{forum.id}")
          %td(id="forum_#{forum.id}_position")=forum.position
          %td(id="forum_#{forum.id}_name")=forum.name
          %td(id="forum_#{forum.id}_description")=forum.description
          %td.links
            =link_to 'edit', edit_forum_path(forum)
            =link_to 'view', forum_path(forum)
%p.links
  =link_to 'new', new_forum_path
  =link_to 'public index', forums_path
-content_for :javascript do
  :javascript
    editInPlace('tr.forum', 'forum', 'description', '/admin/forums/');
    editInPlace('tr.forum', 'forum', 'name', '/admin/forums/');
    editInPlace('tr.forum', 'forum', 'position', '/admin/forums/');
