=page_title 'Forums administration'
%table
  %thead
    %tr
      %th Position
      %th Name
      %th Description
      %th Actions
  %tbody
    -for @forum in @forums
      %tr{:class => cycle('odd', 'even')}
        %td=in_place_editor_field :forum, :position
        %td=in_place_editor_field :forum, :name
        %td=in_place_editor_field :forum, :description
        %td.links
          =link_to 'edit', edit_forum_url(@forum)
          =link_to 'view', forum_url(@forum)
%p.links
  =link_to 'new', new_forum_url
  =link_to 'public index', forums_url
