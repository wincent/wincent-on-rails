-@page_title = 'Reset your passphrase'
=breadcrumbs @page_title
%h1.major=@page_title
=form_for @reset do |f|
  %ul
    %li
      =f.label :email_address,
        annotation('Email address', 'an email will be sent to this address')
      =f.text_field :email_address
    %li=f.submit 'Reset passphrase'
.links
  =link_to 'login', login_path
