-@page_title = 'Reset passphrase'
=breadcrumbs @page_title
%h1.major=@page_title
-# BUG: if there are errors for both user and reset well get two divs with same ID
=render 'shared/error_messages', :model => @reset
=render 'shared/error_messages', :model => @user
=form_for @reset do |f|
  %ul
    %li
      =f.label :email_address,
        annotation('Email address', 'confirm your identity')
      =f.text_field :email_address
    %li
      =label_tag :passphrase, 'New passphrase'
      =password_field_tag :passphrase
    %li
      =label_tag :passphrase_confirmation,
        annotation('New passhrase again', 'confirm your new passphrase')
      =password_field_tag :passphrase_confirmation
    %li=f.submit 'Save changes'
