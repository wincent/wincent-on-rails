!!! XML
!!!
%html{html_attrs}
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html;charset=UTF-8'}
    %title
      wincent.com:
      =@page_title.blank? ? controller.controller_name : h(@page_title)
    =stylesheet_link_tag 'display'
    =yield :css
    =javascript_include_tag 'jquery-1.3.2.min'
    =javascript_include_tag 'application'
    =yield :javascript
    =dynamic_javascript_include_tag
    =@atom_link unless @atom_link.blank?
  %body
    =named_anchor 'top'
    #header
      #meta
        %h1
          %a#logo{:href => root_path, :title => 'Wincent front page'}
            =image_tag('logo.png')
          =link_to 'Wincent &mdash; Software for your Mac', root_path
      %ul#navbar
        %li=link_to 'Products', 'http://wincent.com/a/products/'
        %li=link_to 'Blog', posts_path
        %li=link_to 'Wiki', articles_path
        %li=link_to 'Forums', forums_path
        %li=link_to 'Support', support_path
        -#%li=link_to 'About'
        %li
          -# TODO: make this unobtrusive
          =link_to_function 'Search', "$('#search_box').toggle(); $('#search_box').focus();", :href => search_index_path
          %form{:id => 'search', :action => search_index_path, :method => 'post'}
            =text_field_tag :query, params[:query], :size => 20, :id => :search_box, :style => 'display:none;'
        %li#login=link_to 'log in', login_path
        %li#logout=link_to 'log out', logout_path
    #header-shadow
    #content
      #cacheable-flash
      =yield
    #footer
      =mail_to APP_CONFIG['admin_email'], 'Contact', :title => "Email me at #{APP_CONFIG['admin_email']}"
      |
      =link_to 'Copyright and legal information', '/misc/legal'
