!!! XML
!!!
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html;charset=UTF-8'}
    %title
      wincent.com:
      =@page_title.blank? ? controller.controller_name : h(@page_title)
    =stylesheet_link_tag 'display'
    =yield :css
    =javascript_include_tag :defaults
    =@atom_link unless @atom_link.blank?
  %body
    =named_anchor 'top'
    #header
      #logo
        -haml_tag :a, :href => root_path, :title => 'Wincent front page' do
          =image_tag('logo.png')
      %h1=link_to 'Wincent', root_path
      %ul#navbar
        -#%li=link_to 'Products', products_path
        -#%li=link_to 'Store'
        %li=link_to 'Support', issues_path
        %li=link_to 'Blog', blog_index_path
        %li=link_to 'Wiki', wiki_index_path
        -#%li=link_to 'About'
        %li.last
          =link_to_function 'Search', "$('search').toggle(); $('search_box').focus();", :href => search_tags_path
          -form_tag search_tags_path, :method => 'get', :id => 'search', :style => 'display:none;' do
            =text_field_tag :q, params[:q], :size => 12, :id => :search_box
      -# TODO: show logout link when logged in (not sure _where_ though! probably next to "wincent"): that would break page-caching
    #content
      -flash.each do |key, message|
        =content_tag :div, message, :id => key
      =yield
    #sidebar
      -# on many pages this won't even be used, but there are some places where it is appropriate
      =yield :sidebar
    #footer
      ==Copyright &copy; 1997-#{Time.new.year} #{mail_to('win@wincent.com', 'Wincent Colaiuta')}.
