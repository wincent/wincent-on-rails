%h3 Create new comment
=error_messages_for :comment
-if !logged_in?
  =render :partial => 'shared/anonymous'
-elsif !current_user.verified?
  =render :partial => 'shared/unverified'
-form_for @comment, :url => polymorphic_comments_path(@comment) do |f|
  %table
    %tr
      %th
        Body
        %br
        %span.annotation link to wikitext markup help
      -# TODO: make text area grow with window
      %td=preserve(f.text_area(:body, :cols => 80, :rows => 10))
      -# TODO: set up protected attributes for comments
  %p=f.submit 'Create'
