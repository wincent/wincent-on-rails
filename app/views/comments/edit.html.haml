%h1 Edit comment
%div[@comment]
  =error_messages_for :comment
  -form_for @comment, :url => comment_path(@comment) do |f|
    %table.main
      %tr
        %th
          Body
          %br
          %span.annotation=wikitext_cheatsheet
        %td=f.text_area(:body, :cols => 80, :rows => 10)
      %tr
        %th Public?
        %td=f.check_box :public
    %p=f.submit 'Save'
  .links
    =link_to 'show', comment_path(@comment)
    =button_to_destroy_comment @comment
    =button_to_moderate_comment_as_spam @comment
    =button_to_moderate_comment_as_ham @comment
.links
  =link_to 'all comments awaiting moderation', comments_path
  =link_to 'administator dashboard', admin_dashboard_path
