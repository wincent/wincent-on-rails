=breadcrumbs link_to('Forums', forums_path), @forum.name
#forum
  -@page_title = @forum.name
  %h1.major=@page_title
  %h2=@forum.description unless @forum.description.blank?
  =@paginator.pagination_links if @paginator
  %table.table
    %thead
      %tr
        %th Topic
        %th Replies
        %th Views
        %th Last post
    -unless @topics.empty?
      %tbody
        - @topics.each do |topic|
          %tr
            %td=link_to topic.title, forum_topic_path(@forum, topic)
            %td=number_with_delimiter topic.comments_count
            %td=number_with_delimiter topic.view_count
            %td
              =link_to_user_for_topic topic
              =topic.updated_at.distance_in_words
              -if topic.last_comment_id
                =link_to raw('view &raquo;'),
                  forum_topic_path(@forum, topic) + "\#comment_#{topic.last_comment_id}"
              -else
                =link_to raw('view &raquo;'), forum_topic_path(@forum, topic)
  =@paginator.pagination_links if @paginator
.links
  =link_to 'new topic', new_forum_topic_path(@forum)
  =link_to 'all forums', forums_path
  =link_to 'new forum', new_forum_path if admin?
