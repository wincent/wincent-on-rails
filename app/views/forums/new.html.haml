%h1 Create new forum
=error_messages_for :forum
-form_for @forum, :url => forums_path, :method => 'post' do |f|
  %table.main
    %tr
      %th Name
      %td=f.text_field :name
    %tr
      %th
        Permalink
        %br
        %span.annotation (leave blank to autogenerate)
      %td=f.text_field :permalink
    %tr
      %th
        Description
        %br
        %span.annotation (optional)
      %td=f.text_field :description
  %p=f.submit 'Create'
%p=link_to 'back', forums_path
