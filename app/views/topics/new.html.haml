-page_title "#{@forum.name}: new topic"
=render 'shared/error_messages', :model => @topic
-if !logged_in?
  =render 'shared/anonymous'
-elsif !current_user.verified?
  =render 'shared/unverified'
-form_for :topic, :url => forum_topics_path(@forum), :method => :post do |f|
  %table.main
    %tr
      %th Title
      %td=f.text_field :title
    %tr
      %th
        Body
        %br
        %span.annotation (#{wikitext_cheatsheet})
      %td=f.text_area :body
    -if admin?
      %tr
        %th Tags
        %td=f.text_field :pending_tags
      %tr
        %th Public
        %td=f.check_box :public
      %tr
        %th Accepts comments
        %td=f.check_box :accepts_comments
  %p=f.submit 'Create'
%p=link_to 'back', forums_path
