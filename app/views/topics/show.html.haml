-atom_link @topic
-content_for :css do
  =stylesheet_link_tag 'topics'
#breadcrumbs
  =link_to 'Home', home_path
  &raquo;
  =link_to 'Forums', forums_path
  &raquo;
  =link_to @forum.name, forum_path(@forum)
  &raquo;
  =h @topic.title
=page_title @topic.title
%table[@topic]
  -#%tr.header
  -#  %th Meta
  -#  %th Content
  %tr{ :class => 'comment odd' }
    %td
      =link_to_user @topic.user
      %br
      =pluralizing_count(@topic.user.comments_count, 'post') if @topic.user
      %br
      %span.when
        =timeinfo_for_topic @topic
    %td=preserve @topic.body.w
  -for comment in @comments
    %tr{ :class => "comment #{cycle('even', 'odd')}", :id => "comment_#{comment.id}" }
      %td
        =link_to_user comment.user
        %br
        =pluralizing_count(comment.user.comments_count, 'post') if comment.user
        %br
        %span.when
          =timeinfo_for_topic_comment comment
      %td=preserve comment.body.w
