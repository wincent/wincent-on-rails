-content_for :javascript do
  =javascript_include_tag 'ajax'
  :javascript
    $(function() {
      ajax_comment_form('#{new_article_comment_path @article}');
    });
-@page_title = @article.title
=breadcrumbs link_to('Wiki', articles_path), @article.title
%h1.major=@article.title
.when
  =timeinfo @article
  by
  =mail_to APP_CONFIG['admin_email'], APP_CONFIG['admin_name']
-if @redirected_from
  -if admin?
    %p (Redirected from #{link_to @redirected_from.title, edit_article_path(@redirected_from)})
  -else
    %p (Redirected from #{@redirected_from.title})
.article
  =@article.body.w :base_heading_level => 1
=render 'shared/tags', :tags => @article.tags
.links
  -if admin?
    =link_to 'edit', edit_article_path(@article)
  =link_to 'wiki index', articles_path
-if @article.accepts_comments? || @article.comments_count != 0
  =named_anchor 'comments'
  %h2.major
    Comments
    =feed_icon article_path(@article, :format => :atom)
  %ol.comments
    -for comment in @comments
      %li(class="comment #{comment.user && comment.user.superuser? ? 'admin' : cycle('even', 'odd')}"
           id="comment_#{comment.id}")
        %blockquote=comment.body.w :base_heading_level => 2
        %cite
          =link_to_user comment.user
          %span.when=timeinfo comment, :updated_string => 'edited'
          =link_to 'permalink', comment_path(comment), :class => 'hoverlink'
          -if admin?
            =link_to 'edit', edit_comment_path(comment), :class => 'hoverlink'
  %h2.major Add a comment
  -if @comment
    #ajax_flash
    #comment-form
      .links=link_to 'add a comment', new_article_comment_path(@article)
  -else
    %p
      Comments are now closed for this article. You can discuss it further in
      the #{link_to 'forums', forums_path}.
