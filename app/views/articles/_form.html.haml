= render 'shared/error_messages', model: article

= form_for article do |f|
  = f.text_field :title
  = f.text_field :redirect, annotation: 'optional'
  = f.text_area :body, rows: 30, annotation: wikitext_cheatsheet
  = f.text_field :pending_tags, label: 'Tags'
  = f.check_box :public
  = f.check_box :accepts_comments
  = f.submit
